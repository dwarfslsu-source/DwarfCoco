<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".WelcomeActivity">

    <!-- Main Welcome Card Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mainCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:strokeWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Logo Section Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/logoCard"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#E8F5E8"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <!-- SLSU Logo -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="12dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:id="@+id/slsuLogoImageView"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:alpha="1"
                            android:contentDescription="SLSU Logo"
                            android:scaleType="centerInside"
                            android:src="@drawable/slsulogo" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Dwarf Coconut Logo -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="12dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:id="@+id/dwarfCoconutLogoImageView"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:alpha="1"
                            android:contentDescription="Dwarf Coconut Logo"
                            android:scaleType="centerInside"
                            android:src="@drawable/dwarfcoconutlogo" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Welcome Text Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/welcomeTextCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#F0F8F0"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/welcomeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="1"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text="Welcome to"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/appNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:alpha="1"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:text="Dwarf Coconut Disease Detector"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                        android:textColor="#2E7D32"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- University Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/universityCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#E8F5E8"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/universityTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="1"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="Southern Luzon State University"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        android:textColor="#2E7D32"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/campusTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:alpha="1"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="Tayabas Campus"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="#4CAF50"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Features Cards Section -->
    <LinearLayout
        android:id="@+id/featuresContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainCardView">

        <!-- Feature 1 Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/feature1Card"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#E3F2FD"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/feature1Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="1"
                    android:text="📱"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/feature1Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:alpha="1"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="AI Detection"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="#1976D2"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Feature 2 Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/feature2Card"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#FFF3E0"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/feature2Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="1"
                    android:text="🌴"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/feature2Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:alpha="1"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Plant Health"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="#F57C00"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Developers Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/developersButton"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:alpha="1"
        android:backgroundTint="#F3E5F5"
        android:elevation="2dp"
        android:fontFamily="sans-serif-medium"
        android:text="👨‍💻 Meet the Developers"
        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
        android:textColor="#7B1FA2"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="24dp"
        app:iconGravity="start"
        app:iconPadding="8dp"
        app:iconTint="#7B1FA2"
        app:rippleColor="#E1BEE7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/featuresContainer" />

    <!-- Developer Names Card (Initially Hidden) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/developerNamesCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:alpha="0"
        android:visibility="gone"
        app:cardBackgroundColor="#F3E5F5"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/developersButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/developerNames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="BSIT Students:\n\n• Jeremie Cabile\n• Dionna Oabel\n• Shemarc Beltran\n\nSouthern Luzon State University\nTayabas Campus"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="#8E24AA"
                android:textSize="14sp"
                android:textStyle="normal" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Action Buttons Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/actionButtonsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        app:strokeWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/developerNamesCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Start Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/startButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:alpha="1"
                android:backgroundTint="#4CAF50"
                android:elevation="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="Start Detecting"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="32dp"
                app:icon="@android:drawable/ic_menu_camera"
                app:iconGravity="start"
                app:iconPadding="12dp"
                app:iconTint="@android:color/white"
                app:rippleColor="#81C784" />

            <!-- Learn More Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/learnMoreButton"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:alpha="1"
                android:backgroundTint="#E8F5E8"
                android:elevation="4dp"
                android:fontFamily="sans-serif"
                android:text="Learn More"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textColor="#2E7D32"
                android:textSize="16sp"
                android:textStyle="normal"
                app:cornerRadius="28dp"
                app:icon="@android:drawable/ic_menu_info_details"
                app:iconGravity="start"
                app:iconPadding="8dp"
                app:iconTint="#2E7D32"
                app:rippleColor="#C8E6C9" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>